---
import Container from "./Container.astro";
import { Icon } from "astro-icon/components";
import Dropdown from "./Dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import menuitems from "../data/Nav.json";
interface Props {
  childern?: string;
}

interface menuitems {
  title: string;
  path: string;
  children: menuitems[];
}
---

<Container>
  <header
    class="flex flex-col lg:flex-row justify-between items-center w-11/12 mx-auto"
  >
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-2xl"
          ><span class="font-bold text-primary-red">OP</span><span
            class="text-slate-200">TANWAR</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-200" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3 lg:gap-x-10">
          {
            menuitems.menuitems.map((items) => (
              <li class="text-gray-300 px-2 text-lg hover:bg-slate-200 hover:text-black hover:rounded-lg transition-all duration-300">
                <a href={items.path} class="flex lg:px-3 py-2 items-center">
                  <span> {items.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <ol class="flex gap-x-1 text-gray-200">
            <li class="hover:text-gray-400">
              <Icon name="whatsapp" height={20} width={40} />
            </li>
            <li class="hover:text-gray-400">
              <Icon name="skype" height={20} width={40} />
            </li>
            <li class="hover:text-gray-400">
              <Icon name="github" height={20} width={40} />
            </li>
            <li class="hover:text-gray-400">
              <Icon name="linkedin" height={20} width={40} />
            </li>
            <li class="hover:text-gray-400">
              <Icon name="envelope" height={20} width={40} />
            </li>
          </ol>
        </div>
      </MenuItems>
    </Astronav>
  </header>
</Container>
